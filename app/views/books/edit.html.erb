<h1> Editing Book</h1>

<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
        <div id="error_explanatin">
          <h3> error</h3>
          <% @book.errors.full_messages.each do |message| %>
            <li> <%= message %></li>
          <% end %>
        </div>
    <% end %>

	<div class="field row">
		<%= f.label :Title %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field row">
		<%= f.label :Opinion %><br>
		<%= f.text_area :body %>
	</div>

	<div class="actions row">
		<%= f.submit "Update Book" %>
	</div>
<% end %>

<%= link_to "Show", edit_book_path(@book) %>
 |
<%= link_to "Back", books_path %>